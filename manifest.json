{
  "manifest_version": 3,
  "name": "Cookie Session Validator",
  "version": "1.0",
  "description": "Validates if session cookies actually expire after browser close",
  "permissions": ["cookies", "storage", "tabs", "activeTab", "webRequest", "declarativeNetRequest", "notifications", "alarms"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup-v2.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background-v2.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
